# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# Local development: SQLite
DATABASE_URL=sqlite:///./todo.db

# Production (Railway/Neon PostgreSQL):
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# --------------------------------------------
# Application Settings
# --------------------------------------------
APP_NAME=Todo Backend API
DEBUG=True
ENVIRONMENT=development
# Set to "production" on Railway

# --------------------------------------------
# Server Configuration
# --------------------------------------------
# PORT is automatically set by Railway - do not hardcode
# For local dev, defaults to 8000
API_HOST=0.0.0.0

# --------------------------------------------
# CORS Settings
# --------------------------------------------
# Comma-separated origins allowed to access the API
# Local development:
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Production (add your Vercel frontend URL):
# CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=INFO

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
# IMPORTANT: Generate a strong secret for production!
# Run: openssl rand -hex 32
JWT_SECRET=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

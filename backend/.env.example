# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Database
# Local development: SQLite
DATABASE_URL=sqlite:///./todo.db
# Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Application
APP_NAME=Todo Backend API
DEBUG=True
ENVIRONMENT=development
# Set ENVIRONMENT=production on Railway/deployment

# Server
API_HOST=0.0.0.0
# PORT is set automatically by Railway in production

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Production: add your Vercel frontend URL
# CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Logging
LOG_LEVEL=INFO

# JWT Authentication
# IMPORTANT: Generate a strong secret for production!
# Run: openssl rand -hex 32
JWT_SECRET=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7
JWT_ISSUER=todo-backend-api
JWT_AUDIENCE=todo-frontend

# Security
# Bcrypt work factor: 4 for development (fast), 12+ for production (secure)
# Higher values = more secure but slower
BCRYPT_ROUNDS=12

# LLM Configuration (defaults to Groq free tier)
# Get a free API key from https://console.groq.com
LLM_BASE_URL=https://api.groq.com/openai/v1
LLM_API_KEY=gsk_your-groq-api-key-here
LLM_MODEL=llama-3.3-70b-versatile
# Alternative: OpenAI (requires paid account)
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_API_KEY=sk-your-openai-key
# LLM_MODEL=gpt-4o
